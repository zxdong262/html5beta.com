.pd2
  style.
    .toast {
      position: fixed;
      top: 20px;
      right: 20px;
      background: #1890ff;
      color: white;
      padding: 10px 20px;
      border-radius: 4px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.15);
      z-index: 1000;
      transition: opacity 0.3s;
    }
    .toast.hide {
      opacity: 0;
      pointer-events: none;
    }
  include ../../react/header.pug

  h1 QR Code Generator
  .pd1y
    .pd1y Text:
    input#text-input.w100(placeholder='Enter text', type='text')
  .pd1y
    .pd1y Size:
    input#size-input(placeholder='Enter Size', type='number', value='200')
  .pd1y
    button#generate-btn.mg1r.mg1b(color='primary', disabled) Generate QR Code
    button#download-btn.mg1b.hide(color='success') Download QR Code
  .pd1y
    canvas#qrcode.w100
  .toast.hide#toast
  include ../../react/footer.pug