doctype html
html
  head
    title QR Code Generator
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name='description' content='Generate QR codes online with customizable options.')
    meta(name='keywords' content='QR code, generator, online, customizable, free')
    meta(name='author' content='ZHAO Xudong')
    meta(name='robots' content='index, follow')
    link(rel='canonical' href=url)
    link(rel='icon' href=host + '/favicon.ico' type='image/x-icon')
    link(rel='stylesheet', href=cssUrl)

  body
    #container
    canvas#qr-code
    script(crossorigin, src='//cdn.jsdelivr.net/npm/qrious@4.0.2/dist/qrious.min.js')
    script(crossorigin, src='//unpkg.zhimg.com/react@18/umd/react.production.min.js')
    script(crossorigin, src='//unpkg.zhimg.com/react-dom@18/umd/react-dom.production.min.js')
    script(src=jsUrl)
