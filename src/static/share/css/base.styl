@require 'parts/normalize'


//common elements
html
	width 100%
body
	font-size 13px
	color #244
	background #f2f2f2
	line-height 1.6
	position relative
	font-family '微软雅黑'
a
	text-decoration none
	color #05c

.centered
	width 100%
	max-width 800px
	margin 0 auto
	position relative

//canvas bg
#bg
	position absolute
	width 100%
	left 0
	top 0
	bottom 0
	z-index 1
	#cbg
		width 100%
		height 100%

//wrapper
#wrapper
	position relative
	z-index 2

//header
#header
	border-top 5px solid #273541
	width 100%
	position relative
	z-index 100
#header
	.h1
		height 36px
		display inline-block
		padding 0 10px
		line-height 36px
		font-size 1.6em
		font-weight 400
		background #273541
		border-radius 0 0 4px 4px
		margin-right 10px
		a
			color #eee
			&:hover
				color #F90
				text-shadow 0 0 15px rgba(255,255,255,.8)

//nav
#nav
	line-height 1.5
	position relative
	margin-top 20px
	z-index 90
	.dd-unit
		display inline-block
		vertical-align middle
		position relative
		margin-right 5px
		.link
			display inline-block
			padding 6px 20px 7px
			vertical-align middle
		.dd-sub
			display none
		&:hover
			.link
				background #fff
			.dd-sub
				display inline-block
				position absolute
				top 100%
				left 0
				width 200px
				background #fff
				box-shadow 0 3px 3px rgba(0, 0, 0, .1)
				.sub-link
					display block
					padding 6px 20px
					&:hover
						background #efefef

//content
#content {
	z-index 80
}
.content-bg
	padding 10px
.post-title
	text-align center
	padding-bottom 25px
	font-weight 300
	font-size 30px
	border none
	margin .5em 0
.post-share
	margin-top 30px
	border-top 3px solid #ddd

//footer
#footer
	margin-top 30px
	border-top 2px solid #ddd
	width 100%

//sidenav
#sidenav
	width 200px
	position fixed
	bottom 5%
	right 0
	text-align right
	max-height 90%
	font-size 12px
	z-index 100
	&.scroll
		overflow-y scroll
	p
		margin 2px 0
	ul
		list-style none
		padding 0
		margin 0
		display none
		-webkit-transition 0.5s
		-moz-transition 0.5s
		-ms-transition 0.5s
		-o-transition 0.5s
		transition 0.5s
		li
			margin 2px 0
	&:hover
		ul
			display block
	a
		display inline-block
		padding 3px 4px
		background #fff
		border-radius 3px 0 0 3px
		&:hover
			background #08c
			color #fff

